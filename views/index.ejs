<!DOCTYPE html>
<html>
<head>
    <title>Voting Form</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>

<body>

<div class="bg-wrapper">
  <div class="login-card">

    <h4 class="text-center mb-3">Voting Registration</h4>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>

    <form method="POST" action="/submit">

      <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" name="name" class="form-control">
      </div>

      <div class="mb-3">
        <label class="form-label">Date of Birth</label>
        <input type="date" name="dob" class="form-control">
      </div>

      <div class="mb-3">
        <label class="form-label">Aadhaar Number</label>
        <input type="text" name="aadhaar" class="form-control">
      </div>

      <div class="mb-3">
        <label class="form-label">Voting Preference</label>
        <select name="voting_preference" class="form-select">
          <option value="">Select</option>
          <option>DMK</option>
          <option>ADMK</option>
          <option>TVK</option>
          <option>NTK</option>
          <option>BJP</option>
          <option>PMK</option>
          <option>Other (Dominant)</option>
        </select>
      </div>

      <button class="btn btn-success w-100">Submit</button>
    </form>

  </div>
</div>

</body>
</html>
